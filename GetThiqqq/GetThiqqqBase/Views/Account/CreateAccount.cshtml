<div class="page-header">

</div>
<div id="heading">
    <h3 style="text-align:center">Create A New Account</h3>
</div>
<div id="form-info">
    <form method="post" action="@Url.Action("SubmitAccount", "Account")">
        <p>Enter your information to create your GetThiqq Account!</p>
        <h3 class="username">Username</h3>
        <input id="Username" name="Username" type="text" />
        <h3 class="password">Password</h3>
        <input id="Password" name="Password" type="text" />
        <h3 class="email-address">Email Address</h3>
        <input id="Email-address" name="EmailAddress" type="text"  />
        <div style="text-align: center; padding:10px;">
            <button id="submit" type="submit">Submit</button> <button id="cancel" type="button">Cancel</button>
        </div>
        <div style="text-align:center">
            Already Have an Account? <a asp-area="" asp-controller="Account" asp-action="Login">Login Here</a>
        </div>
    </form>
</div>
