<script type="text/javascript" src="http://code.jquery.com/jquery-latest.min.js"></script>

<style>
    p {
        position: relative;
        text-align: center;
        margin: auto;
    }

    input {
        display: block;
        position: relative;
        margin: auto;
    }

    button {
        position: relative;
        display: inline-block;
        text-align: center;
        height: auto;
        width: auto;
        margin: auto;
        background-color:black;
        color: white;
        border:thin;
        border-color:black;         
    }

    .email-address {
        position: relative;
        display: block;
